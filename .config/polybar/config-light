[colors]
background = #222222
background-alt = #3b3a3a
foreground = #e3dfdf
foreground-alt = #3b3a3a
primary = #96aab1
secondary = #9f4a9b
alert = ${xrdb:color3:#222}

[bar/desktop]
monitor = LVDS1 
width = 100%
height = 22
radius = 0
fixed-center = false
bottom = false
override-redirect = false

background = ${colors.background}
foreground = ${colors.foreground}

border-bottom-size = 1
border-color = #000000

padding-left = 2
padding-right = 2
module-margin = 1

font-0 = Iosevka:antialias=true:pixelsize=9;2
font-1 = FontAwesome:pixelsize=9;2
font-2 = Noto Sans Mono CJK JP:antialias=true:pixelsize=9;2

modules-left = bspwm xwindow
modules-center = 
modules-right = memory cpu temp wlan pulseaudio battery time menu

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background}
label-focused-padding = 1
label-focused-foreground = ${colors.secondary}

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow

label = : %title%
label-maxlen = 70

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5

format-connected = <label-connected>
label-connected = %{F#96aab1}wifi %{F-} %signal%%
label-connected-foreground = ${colors.foreground}

format-disconnected = <label-disconnected>
label-disconnected = %{F#96aab1}wifi %{F-} not connected
label-disconnected-foreground = ${colors.foreground}

[module/time]
type = internal/date
interval = 5

date = %d-%m-%Y%
time = %H:%M
label = %{F#96aab1}[%{F-}  %date%   %time%  %{F#96aab1}]

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
interval = 5

format-volume = <label-volume> 
label-volume = %{F#96aab1}vol %{F-} %percentage%%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
poll-interval = 5

format-charging = <label-charging> 
label-charging = %{F#96aab1}bat %{F-} %percentage%%

format-discharging = <label-discharging>  
label-discharging = %{F#96aab1}bat %{F-} %percentage%%

[module/memory]
type = internal/memory
interval = 5

format = <label>
label = %{F#96aab1}mem %{F-} %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 5

format = <label>
label = %{F#96aab1}cpu %{F-} %percentage%%

[module/temp]
type = internal/temperature
interval = 5

format = <label>
label = %{F#96aab1}temp %{F-} %temperature-c%

[module/menu]
type = custom/menu

label-open = ï€…
label-open-margin-right = 1
label-open-foreground = #cacaca
label-close = cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot
menu-2-0 = power off
menu-2-0-exec = systemctl poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

